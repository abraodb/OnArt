<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onart">

    <application
        android:name=".InformacoesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AlteraArteActivity"
            android:label="@string/title_activity_altera_arte"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CadastraArteActivity"
            android:label="@string/title_activity_cadastra_arte"
            android:parentActivityName=".MeuPerfilActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.onart.MeuPerfilActivity" />
        </activity>
        <activity
            android:name=".EditaPerfilActivity"
            android:label="@string/title_activity_edita_perfil"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecyclerCardViewActivity"
            android:label="@string/title_activity_recycler_card_view"
            android:parentActivityName=".FeedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.onart.FeedActivity" />
        </activity>
        <activity
            android:name=".ArteActivity"
            android:label="@string/title_activity_arte"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MeuPerfilActivity"
            android:label="@string/title_activity_meu_perfil"
            android:parentActivityName="androidx.appcompat.app.AppCompatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androidx.appcompat.app.AppCompatActivity" />
        </activity>
        <activity
            android:name=".FeedActivity"
            android:label="@string/title_activity_feed"
            android:parentActivityName="androidx.appcompat.app.AppCompatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androidx.appcompat.app.AppCompatActivity" />
        </activity>
        <activity
            android:name=".AlteraSenhaActivity"
            android:label="@string/title_activity_altera_senha"
            android:parentActivityName="androidx.appcompat.app.AppCompatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androidx.appcompat.app.AppCompatActivity" />
        </activity>
        <activity
            android:name=".CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:parentActivityName="androidx.appcompat.app.AppCompatActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="androidx.appcompat.app.AppCompatActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>